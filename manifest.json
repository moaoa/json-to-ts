{
  "manifest_version": 3,
  "name": "Json-to-TypeScript",
  "description": "extension to convert json to TypeScript",
  "options_ui": {
    "page": "src/pages/options/index.html"
  },
  "background": {
    "service_worker": "src/pages/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "devtools_page": "src/pages/devtools/index.html",
  "web_accessible_resources": [
    {
      "resources": ["contentStyle.css", "icon-128.png", "icon-32.png"],
      "matches": ["https://cdn.jsdelivr.net"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src script-src-elem 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self';"
  }
}
